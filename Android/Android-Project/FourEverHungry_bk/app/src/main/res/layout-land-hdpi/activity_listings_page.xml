<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nihar.java_assignment.foureverhungry.ListingsPage">
    <!-- This  scroll bar covers the entire screen. -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- This  is the outer linear layout for the scroll-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- This  is the inner linear layout for the title and logo -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="@dimen/activity_title_top_margin_land"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/title_text_size" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:text="Search Results"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <!-- This linear layout is only to set maximum height of scroll bar -->


                    <LinearLayout
                        android:id="@+id/listingsParentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dominos_logo"
                            android:drawableRight="@drawable/stars_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:onClick="goToDetailedView"
                            android:text="Domino's Pizza" />

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/papajohns_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="Papa John's Pizza" />

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mandy_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="Mandy's Pizza" />

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mandy_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="B's Pizza" />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mandy_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="C's Pizza" />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mandy_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="D's Pizza" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mandy_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="E's Pizza" />

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mandy_logo"
                            android:drawableRight="@drawable/stars_4_5"
                            android:maxHeight="@dimen/listing_maxHeight"
                            android:text="F's Pizza" />

                    </LinearLayout>

            <!-- This  is the layout for the "Save Results" and "Show on Map" buttons -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:onClick="goToMapView"
                    android:text="Show on Map" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="saveSearch"
                    android:text="Save Search" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
