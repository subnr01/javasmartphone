<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.cmu.foreverhungry.ui.search.SavedSearchesPage"
    android:background="@drawable/img7">

    <include
        layout="@layout/logo"
        android:id="@+id/appLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Saved Searches"
        android:id="@+id/textView18"
        android:layout_below="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="#0b21e6" />


    <!-- android:entries="@array/saved_searches" -->
    <Spinner
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSavedSearches"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true"
        style="@style/spinner_style"
        android:layout_marginTop="28dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View"
    android:id="@+id/ViewButton"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/spinnerSavedSearches"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete"
    android:id="@+id/DeleteButton"
    android:layout_marginTop="34dp"
    android:layout_below="@+id/ViewButton"
    android:layout_centerHorizontal="true" />

</RelativeLayout>
